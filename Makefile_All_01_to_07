.PHONY: run-saves

run-saves:
	@echo "üîÅ Saving all notebooks with outputs..."
	jupyter nbconvert --to notebook --inplace --execute notebooks/01_data_loading_and_cleaning.ipynb
	jupyter nbconvert --to notebook --inplace --execute notebooks/02_phq_feature_engineering.ipynb
	jupyter nbconvert --to notebook --inplace --execute notebooks/03_feature_engineering_multimodal.ipynb
	jupyter nbconvert --to notebook --inplace --execute notebooks/04_model_training.ipynb
	jupyter nbconvert --to notebook --inplace --execute notebooks/05_model_calibration_verification.ipynb
	jupyter nbconvert --to notebook --inplace --execute notebooks/06_microexpression_clean_and_compare.ipynb
	jupyter nbconvert --to notebook --inplace --execute notebooks/07_microexpression_modeling.ipynb
	@echo "‚úÖ All notebooks 01‚Äì07 saved with outputs for GitHub review."
